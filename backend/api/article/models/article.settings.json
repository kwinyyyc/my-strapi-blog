{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "archive"
      ]
    },
    "publish_at": {
      "type": "datetime",
      "private": false,
      "required": false
    }
  }
}
